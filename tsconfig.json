{
  "compilerOptions": {
    /* Language and Environment */
    "baseUrl": ".",
    "target": "es2022",
    "lib": ["es2022"],
    "skipLibCheck": true,
    /* Modules */
    "module": "commonjs",
    "rootDir": "src", /* Paths */
    "paths": {
      "@root/*": ["./*"],
      "@src/*": ["./src/*"],
      "@controllers/*": ["./src/controllers/*"],
      "@routes/*": ["./src/routes/*"],
      "@views/*": ["./src/views/*"],
      "@public/*": ["./public/*"]
    },

    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true
  },
  "exclude": [
    "node_modules",
    "build"
  ]
}